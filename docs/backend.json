{
  "entities": {
    "Student": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Student",
      "type": "object",
      "description": "Represents a student in the school.",
      "properties": {
        "admission_number": { "type": "string" },
        "first_name": { "type": "string" },
        "last_name": { "type": "string" },
        "gender": { "type": "string" },
        "class": { "type": "string" },
        "stream": { "type": "string" },
        "uploaded_at": { "type": "string", "format": "date-time" },
        "uploaded_by": { "type": "string" }
      },
      "required": ["admission_number", "first_name", "last_name", "class"]
    },
    "Choir": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Choir",
      "type": "object",
      "description": "Represents a choir group.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" },
        "created_by": { "type": "string" }
      },
      "required": ["name"]
    },
    "ChoirMember": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ChoirMember",
      "type": "object",
      "description": "A student's membership in a specific choir.",
      "properties": {
        "admission_number": { "type": "string" },
        "status": { "type": "string", "enum": ["active", "inactive"] },
        "date_joined": { "type": "string", "format": "date-time" },
        "added_by": { "type": "string" }
      },
      "required": ["admission_number", "status"]
    },
    "ChoirAttendance": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ChoirAttendance",
      "type": "object",
      "description": "Attendance record for a session.",
      "properties": {
        "id": { "type": "string" },
        "choirId": { "type": "string" },
        "choirName": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "practice_type": { "type": "string" },
        "attendance_map": { "type": "object" },
        "recorded_by": { "type": "string" }
      },
      "required": ["id", "date", "attendance_map"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/students/{admissionNumber}",
        "definition": {
          "entityName": "Student",
          "description": "Stores master student records."
        }
      },
      {
        "path": "/choirs/{choirId}",
        "definition": {
          "entityName": "Choir",
          "description": "Stores choir groups."
        }
      },
      {
        "path": "/choirs/{choirId}/members/{admissionNumber}",
        "definition": {
          "entityName": "ChoirMember",
          "description": "Stores members assigned to a specific choir."
        }
      },
      {
        "path": "/choir_attendance/{attendanceId}",
        "definition": {
          "entityName": "ChoirAttendance",
          "description": "Stores historical attendance records."
        }
      },
      {
        "path": "/custom_lists/{listId}",
        "definition": {
          "entityName": "CustomList",
          "description": "Stores custom printable student registers."
        }
      }
    ]
  }
}