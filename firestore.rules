/**
 * Core Philosophy: This ruleset enforces a secure "Authenticated staff" model.
 * Any user who is signed into the application can read and write data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------
    // Helper Functions
    // --------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    // --------------------------------
    // Global Access
    // --------------------------------

    // Allow authenticated staff to read and write all school documents
    // This supports both direct document access and collection listings/queries.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
