/**
 * Core Philosophy: Authenticated school staff model.
 * Any user signed into the application can manage school records.
 * Triggering deployment comment: v1.3 - Explicit CRUD permissions for all modules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Allow authenticated staff to manage all primary collections
    match /students/{studentId} {
      allow get, list, create, update, delete: if isSignedIn();
    }

    match /choirs/{choirId} {
      allow get, list, create, update, delete: if isSignedIn();
      
      // Nested members collection
      match /members/{memberId} {
        allow get, list, create, update, delete: if isSignedIn();
      }
    }

    match /choir_attendance/{sessionId} {
      allow get, list, create, update, delete: if isSignedIn();
    }

    match /custom_lists/{listId} {
      allow get, list, create, update, delete: if isSignedIn();
    }

    // Support collectionGroup queries for the Dashboard (e.g. counting all members)
    match /{path=**}/members/{memberId} {
      allow get, list: if isSignedIn();
    }
  }
}
