/**
 * Core Philosophy: This ruleset enforces a secure "Authenticated staff" model.
 * Any user who is signed into the application can read and write data.
 * This ensures that dashboard queries and record management work seamlessly for school staff.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------
    // Helper Functions
    // --------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    // --------------------------------
    // Collection Rules
    // --------------------------------

    // Allow authenticated staff to read and write all school documents
    match /{document=**} {
      allow read, write: if isSignedIn();
    }

    // Explicitly support collectionGroup queries for choir members (Dashboard)
    match /{path=**}/members/{admissionNumber} {
      allow read: if isSignedIn();
    }
  }
}
